<div>
  <div>Cart: {{this.cartLength}} services</div>
  <AuHeading>Select the services you need</AuHeading>
  <div>
    <div class="au-c-form">
      <p>
        <AuLabel for="input-block">Zoek op titel</AuLabel>
        <AuInput id="input-block" @width="block" @icon="search" @value={{mut this.titleSearch}} />
      </p>

      <p>
        <AuLabel for="input-block">Zoek op tag</AuLabel>
        <AuInput id="input-block" @width="block" @icon="search" @value={{mut this.tagSearch}}/>
      </p>
    </div>
  </div>
  <div class="au-o-grid">
    {{#each this.products as |product|}}
      <div class="au-o-grid__item au-u-1-2">
        <Product @product={{product}} @addToCart={{this.addToCart}} />
      </div>
    {{/each}}
  </div>
  <AuLink @linkRoute="checkout" @skin="button"> Continue </AuLink>

</div>