<AuHeading>Confirmation</AuHeading>
{{#each this.shoppingCart.cart as |item|}}
  <AuCard @flex={{true}} as |c|>
    <c.header @badgeSkin="brand">
      <AuHeading @level="2" @skin="4">
        {{item.title}}
      </AuHeading>
    </c.header>
    <c.content>
      <AuButton @alert={{true}} @icon='remove' @iconAlignment="left" {{on 'click' (fn this.removeItem item)}}>Delete</AuButton>
      {{#let (get-missing-deps this.shoppingCart item) as |missing|}}
        {{#if missing.length}}
          <DependencyError @target={{@item}} @missingProducts={{missing}}/>
        {{/if}}
      {{/let}}
    </c.content>
  </AuCard>
{{/each}}
<AuLink @linkRoute="scheduler" @skin="button"> Confirm </AuLink>